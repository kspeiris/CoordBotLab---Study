{
  "manifest_version": 3,
  "name": "CordBotLab Guard",
  "version": "1.0.0",
  "description": "Lightweight coordination-style bot behavior detector (local, privacy-safe).",
  "permissions": ["storage", "activeTab", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CordBotLab Guard"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
